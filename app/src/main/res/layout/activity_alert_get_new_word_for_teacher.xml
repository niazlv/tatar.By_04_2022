<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/layout_for_alert"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">


  <ImageView
      android:id="@+id/imageView3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/ic_alert_new_back"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/textView3"
      android:layout_width="0dp"
      android:paddingTop="24dp"
      android:paddingHorizontal="20dp"
      android:layout_marginHorizontal="20dp"
      android:layout_height="wrap_content"
      android:fontFamily="@font/pixy"
      android:textSize="32sp"
      android:textColor="@color/colorPrimaryDark"
      android:text="Вы прошли уровень!"
      android:gravity="center"

      app:layout_constraintEnd_toEndOf="@+id/imageView3"
      app:layout_constraintStart_toStartOf="@+id/imageView3"
      app:layout_constraintTop_toTopOf="@+id/imageView3" />

  <TextView
      android:id="@+id/translation_example"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:fontFamily="@font/pixy"
      android:text="Поздравляю, вы выполнили главную цель уровня - открыли слово школа. Теперь, чтобы закрепить свои знания пройдите небольшой тест"
      android:layout_marginTop="64dp"
      android:layout_marginHorizontal="32dp"
      android:textColor="#000000"
      android:textSize="24sp"
      app:layout_constraintEnd_toEndOf="@+id/imageView3"
      app:layout_constraintStart_toStartOf="@+id/imageView3"
      app:layout_constraintTop_toBottomOf="@+id/textView3" />

  <ImageView
      android:id="@+id/to_test"
      android:layout_marginTop="96dp"
      android:layout_marginHorizontal="32dp"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="@+id/imageView3"
      app:layout_constraintEnd_toEndOf="@+id/imageView3"
      app:layout_constraintStart_toStartOf="@+id/imageView3"
      app:layout_constraintTop_toBottomOf="@+id/translation_example"
      app:srcCompat="@drawable/ic_to_test" />

</androidx.constraintlayout.widget.ConstraintLayout>